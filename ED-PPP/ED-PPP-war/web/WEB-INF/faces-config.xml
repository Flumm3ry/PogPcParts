<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/user/products.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/unexpectedError.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>{myProductManagedBean.searchProducts()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/products.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>{myProductManagedBean.getProduct()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/productDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/products.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/unexpectedError.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{myProductManagedBean.adminSearchProducts()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/products.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{myProductManagedBean.getProduct()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/updateProduct.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/users.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/unexpectedError.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{myUserManagedBean.searchUsers()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{myUserManagedBean.getUser(u.userId)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/updateUser.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/registerSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/registerFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/addProduct.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/addProductSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/unexpectedError.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/changePassword.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/changePasswordSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/user/changePasswordFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
