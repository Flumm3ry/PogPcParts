<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/authFailure.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>AdminOnly</display-name>
        <web-resource-collection>
            <web-resource-name>AdminOnly</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>UsersAndAdmins</display-name>
        <web-resource-collection>
            <web-resource-name>LoggenInUser</web-resource-name>
            <description/>
            <url-pattern>/user/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Logged in users</description>
            <role-name>USER</role-name>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>pppRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/retryLogin.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Normal user with limited priviledges </description>
        <role-name>USER</role-name>
    </security-role>
    <security-role>
        <description>Admin with all priviledges</description>
        <role-name>ADMIN</role-name>
    </security-role>
</web-app>
